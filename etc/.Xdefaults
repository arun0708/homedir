Rxvt*background: #000033
Rxvt*foreground: #ffffcc
Rxvt*geometry: 80x40
Rxvt*scrollBar: False
Rxvt*scrollTtyOutput: False
Rxvt*scrollTtyKeypress: True
Rxvt*saveLines: 10240

URxvt*background: #000000
URxvt*foreground: #ffffff
URxvt*fading: 50
! run "fc-list" for a list of available fonts
! font is specified in ~/local/$HOSTNAME/.Xdefaults
URxvt*scrollBar: False
URxvt*scrollTtyOutput: False
URxvt*scrollTtyKeypress: True
URxvt*secondaryScroll: True
URxvt*saveLines: 400

! Change urxvt font
! Bind C-0, C-+ and C-= to activate medium, big and small font size respectively.
! URxvt.font: xft:DejaVu Sans Mono:pixelsize=10,xft:Bitstream Vera Sans Mono,xft:Baekmuk Gulim,xft:Kochi Gothic,xft:AR PL ShanHeiSun Uni,xft:FreeMono:autohint=true
URxvt.keysym.C-minus: command:\033]710;xft:DejaVu Sans Mono:pixelsize=10:autohint=true\007\033]711;xft:DejaVu Sans Mono:pixelsize=10:autohint=true\007
URxvt.keysym.C-0: command:\033]710;xft:DejaVu Sans Mono:pixelsize=16:autohint=true\007\033]711;xft:DejaVu Sans Mono:pixelsize=16:autohint=true\007
URxvt.keysym.C-equal: command:\033]710;xft:DejaVu Sans Mono:pixelsize=26:autohint=true\007\033]711;xft:DejaVu Sans Mono:pixelsize=26:autohint=true\007

! to match gnome-terminal "Linux console" scheme
! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AA5500
URxvt.color11 : #FFFF55
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF
