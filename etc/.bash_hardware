echo "sourcing ~/etc/.bash_hardware..." 1>&2

# TODO: combine this with ~/local/tang/system/usr/share/X11/xorg.conf.d/10-trackpad.conf
# http://askubuntu.com/questions/166420/how-to-detect-an-usb-device
# http://www.x.org/wiki/Development/Documentation/PointerAcceleration/#index8h3
# https://wiki.archlinux.org/index.php/Mouse_acceleration
# $ xinput list
# $ xinput list-props 'Dell Dell USB Optical Mouse'

if lsusb | grep -q '413c:3012'; then
    echo "setting Dell mouse speed..."

    # Set deceleration using xinput (xinput has settings for specific devices)
    xinput --set-prop 'Dell Dell USB Optical Mouse' 'Device Accel Constant Deceleration' 1.5
    # Set acceleration using xset (xset applies to all devices)
    xset m 4/1
fi

if lsusb | grep -q '046d:c05a'; then
    echo "setting Logitech mouse speed..."

    # Set deceleration using xinput (xinput has settings for specific devices)
    xinput --set-prop 'Logitech USB Optical Mouse' 'Device Accel Constant Deceleration' 1.5
    # Set acceleration using xset (xset applies to all devices)
    xset m 3/1 6
fi
